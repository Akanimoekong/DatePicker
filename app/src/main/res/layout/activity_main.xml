<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/date_from"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:textAllCaps="true"
        android:text="From"
        android:layout_marginLeft="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <EditText
        android:id="@+id/date_fromEdt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/date_from"
        android:layout_marginHorizontal="16dp"
        android:hint="Select Date..."/>

    <TextView
        android:id="@+id/date_to"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:textAllCaps="true"
        android:text="To"
        android:layout_marginLeft="16dp"
        app:layout_constraintTop_toBottomOf="@id/date_fromEdt"
        app:layout_constraintStart_toStartOf="parent"/>

    <EditText
        android:id="@+id/date_toEdt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/date_to"
        android:layout_marginHorizontal="16dp"
        android:hint="Select Date..."/>

    <Button
        android:id="@+id/btn_showTrans"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="16dp"
        android:text="Show Transactions"
        app:layout_constraintTop_toBottomOf="@id/date_toEdt"
        />

</androidx.constraintlayout.widget.ConstraintLayout>